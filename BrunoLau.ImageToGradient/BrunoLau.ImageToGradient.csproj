<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Bruno Laurinec</Authors>
    <Title>Library extracting linear gradient from an image</Title>
    <Description>Library extracting linear gradient from an image</Description>
    <PackageProjectUrl>https://github.com/brunolau/BrunoLau.ImageToGradient</PackageProjectUrl>
    <RepositoryUrl>https://github.com/brunolau/BrunoLau.ImageToGradient</RepositoryUrl>
    <PackageTags>image;gradient</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SixLabors.ImageSharp" Version="3.0.1" />
  </ItemGroup>

</Project>
